# Scraping System Integration Configuration
# Copy this to your .env file or include these variables

# Python Scraping System API URL
SCRAPING_API_URL=http://localhost:8000/api/v1

# Base URL for this application (used in source URLs)
BASE_URL=http://localhost:3000

# Synchronization settings
SYNC_INTERVAL_MINUTES=30
SYNC_BATCH_SIZE=50

# Validation settings
AUTO_VALIDATION_THRESHOLD=0.7
STRICT_VALIDATION_MODE=false

# Discovery settings
MAX_DISCOVERY_DEPTH=2
DISCOVERY_REQUEST_DELAY=1000
MAX_CONCURRENT_DISCOVERIES=3

# Integration settings
AUTO_INTEGRATE_THRESHOLD=0.9
REQUIRE_MANUAL_REVIEW=true

# Monitoring settings
AGENT_MONITORING_INTERVAL=60
SYSTEM_HEALTH_CHECK_INTERVAL=300

# Database connection (if different from main app)
# SCRAPING_DB_URL=postgresql://user:password@localhost:5432/mount_isa_services

# Redis connection for task queues (Python system)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=info
SCRAPING_LOG_FILE=logs/scraping-integration.log